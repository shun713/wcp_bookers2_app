<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="error_explanation">
        <% if @user.errors.any? %>
          <% if (@user.errors.count) == 1 %>
            <h3>1 error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
        <%= form_with model: @user, local: true do |f| %>
        <div class="field mb-3">
          <%= f.label :Name %><br />
          <%= f.text_field :name, autofocus: true ,id:"inputName" ,class:"form-control"%>
        </div>
        <div class="field mb-3">
          <%= f.label :Image %><br />
          <%= f.attachment_field :image %>
        </div>
        <div class="field mb-3">
          <%= f.label :Introduction %><br/>
          <%= f.text_area :introduction,class:"form-control" %>
        </div>
        <div class="actions mb-3">
          <%= f.submit "Update User" ,class:"btn btn-sm btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
