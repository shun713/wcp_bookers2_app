<div class="container px-5 px-sm-0">
  <div class="row">
  <!--左側-->
    <div class="col-md-3">
      <%= render "lists/user_profile", user: @user %>
       <!--編集ボタン-->
        <div class="row">
          <% if @user == current_user %>
            <a><%= link_to "" ,edit_user_path(current_user.id) ,class:"bi bi-gear-fill btn btn-outline-secondary btn-block" %></a>
          <% else %>
            <a><%= link_to "" ,user_path(current_user.id) ,class:"bi bi-gear-fill btn btn-outline-secondary btn-block" %></a>
          <% end %>
        </div>
      <%= render "lists/new_book", book: @book %>
    </div>
  <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag book.user, :image, :fill, 40, 40, fallback:"/assets/no_image.jpg"%></td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.opinion %></td>
            <td></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>