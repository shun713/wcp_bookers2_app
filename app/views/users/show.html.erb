<div class="container px-5 px-sm-0">
  <div class="row">
  <!--左側-->
    <div class="col-md-3">
    <!--ユーザー-->
      <h2>User info</h2>
      <img class="attachment user profile_image fallback" ><%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "/assets/no_image.jpg" %>
      <table class="table mt-2">
      <tbody>
        <tr></tr>
        <tr>
    	    <th>name</th>
    	    <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.introduction %></th>
        </tr>
      </tbody></table>
      </table>
    <!--編集ボタン-->
      <div class="row">
        <% if @user == current_user %>
          <a><%= link_to "" ,edit_user_path(current_user.id) ,class:"bi bi-gear-fill btn btn-outline-secondary btn-block" %></a>
        <% else %>
          <a><%= link_to "" ,user_path(current_user.id) ,class:"bi bi-gear-fill btn btn-outline-secondary btn-block" %></a>
        <% end %>
      </div>
    <!--本 登録-->
      <h2 class="mt-3">New book</h2>
      <%=form_with model:@book, local:true do |f| %>
        <div class="field mb-3">
          <%= f.label :Title %><br />
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="field mb-3">
          <%= f.label :Opinion %><br/>
          <%= f.text_area :opinion, class:"form-control" %>
        </div>
        <div class="actions mb-3">
          <%= f.submit "Create Book" ,class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |b| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag b.user, :image, :fill,40,40, fallback:"/assets/no_image.jpg" %></td>
            <td><%= b.title %></td>
            <td><%= b.opinion %></td>
            <td></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>