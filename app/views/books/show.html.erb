<div class="container px-5 px-sm-0">
  <div class="row">
  <!--左側-->
   <%= render "lists/left", user: @user ,book: @book%>
  <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <% if @books.user == current_user %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@books.user.id) do %>
                <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, fallback:"/assets/no_image.jpg"%><br>
                <%= @books.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@books.id) do %>
                <%= @books.title %>
                <% end %>
              </td>
              <td><%= @books.body %></td>
              <td><%= link_to "Edit" , edit_book_path, class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy" , book_path, method: :delete, class:"btn btn-sm btn-danger" ,"data-confirm" => "本当に削除しますか？" %></td>
            </tr>
          </tbody>
        <% else %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@books.user.id) do %>
                <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, fallback:"/assets/no_image.jpg"%><br>
                <%= @books.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@books.id) do %>
                <%= @books.title %>
                <% end %>
              </td>
              <td><%= @books.body %></td>
            </td>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>