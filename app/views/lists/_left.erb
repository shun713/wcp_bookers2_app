<!--ユーザー-->
<div class="col-md-3">
  <h2>User info</h2>
  <div class="attachment user profile_image fallback">
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "/assets/no_image2.jpg" %>
  </div>
  <table class="table mt-2">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= user.introduction %></th>
      </tr>
    </tbody></table>
  </table>
  <div class="row">
    <a><%= link_to "" ,edit_user_path(@user.id) ,class:"fas fa-user-cog btn btn-outline-secondary btn-block" %></a>
  </div>
  <h2 class="mt-3">New book</h2>
    <%=form_with model:book, local:true do |f| %>
      <div class="field mb-3">
        <%= f.label :Title %><br />
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="field mb-3">
        <%= f.label :Opinion %><br/>
        <%= f.text_area :body, class:"form-control" %>
      </div>
      <div class="actions mb-3">
        <%= f.submit "Create Book" ,class:"btn btn-success" %>
      </div>
    <% end %>
</div>